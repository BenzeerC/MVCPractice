@{
    ViewData["Title"] = "List";
}

<h1>List</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Product p in (IEnumerable<Product>)ViewData["list"])
        {
            <tr>
                <th>@p.Id</th>
                <th>@p.Name</th>
                <th>@p.Price</th>

            </tr>
        }
    </tbody>
</table>
